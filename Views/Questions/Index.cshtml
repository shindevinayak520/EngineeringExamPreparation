@model List<Question>


<div class="container mt-4">

<h2>Questions</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create New Questions</a>
</p>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Question Text</th>
            <th>Chapter</th>
            <th>Choices</th>
            <th>Actions</th>
        </tr>
        </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td></td>
                <td>@question.QuestionText</td>
                <td>@question.Chapter.ChapterName</td>
                <td>
                    <ol type="A">
                        @foreach (var choice in question.Choices)
                        {
                            <li>
                                @choice.Text
                                @if (choice.IsCorrect)
                                {
                                        <span class="badge bg-success">Correct</span>
                                }
                            </li>
                        }
                    </ol>
                </td>
                <td>
                        <a asp-action="Details" asp-route-id="@question.QuestionId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@question.QuestionId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@question.QuestionId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}