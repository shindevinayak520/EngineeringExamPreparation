@model Question

<div class="container mt-4">
    <h2>Edit Question</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="QuestionId" />

        <div class="mb-3">
            <label asp-for="QuestionText" class="form-label">Question Text</label>
            <input asp-for="QuestionText" class="form-control" required />
            <div class="invalid-feedback">
                Please enter the question text.
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="ChapterId" class="form-label">Chapter</label>
            <select asp-for="ChapterId" asp-items="new SelectList(ViewBag.Chapters, nameof(Chapter.ChapterId), nameof(Chapter.ChapterName))" class="form-select" required></select>
            <div class="invalid-feedback">
                Please select a chapter.
            </div>
        </div>

        <h4 class="mb-3">Choices</h4>
        <div class="mb-3">
            @for (var i = 0; i < Model.Choices.Count; i++)
            {
                <div class="choice-group mb-3">
                    <input type="hidden" asp-for="Choices[i].Id" />
                    <label class="form-label">Choice @i</label>
                    <input type="text" asp-for="Choices[i].Text" class="form-control" required />
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Choices[i].IsCorrect" />
                        <label class="form-check-label">Is Correct</label>
                    </div>
                    <div class="invalid-feedback">
                        Please enter the choice text.
                    </div>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>

@section Scripts {
    <script>
        // Add any scripts you need for client-side functionality
    </script>
}
