@model List<Chapter>

@{

}
<h2>Add Multiple Chapters</h2>

<form asp-action="AddMultiple" asp-route-subjectId="@ViewBag.SubjectId" method="post">
    @for (var i = 0; i < 5; i++)
    {
        <div class="form-group">
            <label class="control-label">Chapter @(i + 1)</label>
            <input type="text" name="[@i].ChapterName" class="form-control" />
            <span class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-primary">Save</button>
</form>
